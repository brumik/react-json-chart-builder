{
  "testEnvironment": "jsdom",
  "preset": "ts-jest",
  "transform": {
    "^.+\\.(ts|tsx|js|jsx)?$": "ts-jest"
  },
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
    "\\.(css|scss)$": "identity-obj-proxy"
  },
  "roots": [
    "<rootDir>/src"
  ],
  "testMatch": [
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "collectCoverageFrom": [
    "src/**/*.{js,jsx,tsx}",
    "!<rootDir>/node_modules/"
  ]
}